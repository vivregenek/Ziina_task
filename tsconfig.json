{
    "compilerOptions": {
        "types": ["node", "jest"],
        "target": "ES2021",
        "module": "esnext",
        "outDir": "./.tsbuild/",
        "moduleResolution": "node",
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "resolveJsonModule": true,
        "lib": [
          "ES2021",
          "dom"
        ],
        "sourceMap": true
    },
    "include": ["tests/**/*.ts"],
    "exclude" :["./node_modules", "./.types"]
}
